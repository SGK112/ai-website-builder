# AI Website Builder - Environment Variables
# Copy this file to .env.local and fill in your values

# ===================
# DATABASE
# ===================
MONGODB_URI=mongodb://localhost:27017/ai-website-builder

# ===================
# AUTHENTICATION
# ===================
NEXTAUTH_SECRET=your-nextauth-secret-here-generate-with-openssl-rand-hex-32
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (optional)
GITHUB_ID=
GITHUB_SECRET=

# ===================
# AI PROVIDERS
# ===================
# At least one AI provider is required

# OpenAI (for chat tour guide)
OPENAI_API_KEY=sk-...

# Anthropic Claude (for code generation)
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini (for large context operations)
GOOGLE_AI_API_KEY=

# ===================
# ENCRYPTION
# ===================
# Used to encrypt user credentials - MUST be at least 32 characters
ENCRYPTION_KEY=your-32-character-or-longer-encryption-key

# ===================
# DEPLOYMENT (Optional)
# ===================
# These are used for one-click deployment

# GitHub Personal Access Token (for creating repos)
GITHUB_ACCESS_TOKEN=ghp_...

# Render API Key (for deployments)
RENDER_API_KEY=rnd_...

# ===================
# PAYMENTS (Optional)
# ===================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===================
# EMAIL (Optional)
# ===================
SENDGRID_API_KEY=
EMAIL_FROM=noreply@example.com
